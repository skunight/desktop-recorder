{
  "name": "desktop-recorder",
  "version": "1.0.5",
  "license": "MIT",
  "description": "一个Electron+Vue实现的录屏软件客户端",
  "author": "zzy",
  "repository": {
    "type": "git",
    "url": "https://github.com/skunight/desktop-recorder"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build:dev": "vue-cli-service build --watch",
    "start": "electron index",
    "buildApp": "electron-builder --publish=never",
    "prebuildApp": "vue-cli-service build"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "dayjs": "^1.8.28",
    "rxjs": "^6.5.5",
    "view-design": "^4.2.0",
    "vue": "^2.6.11",
    "vue-electron": "^1.0.6"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-service": "~4.4.0",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "3.2.0",
    "electron": "^13.6.6",
    "electron-builder": "^22.7.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "less-loader": "^6.1.0",
    "pug": "^3.0.0",
    "pug-plain-loader": "^1.0.0",
    "vue-template-compiler": "^2.6.11"
  },
  "build": {
    "appId": "com.magic.desktop.recorder",
    "productName": "recorder",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/logo.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "target": [
        {
          "target": "NSIS",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "category": "com.magic.desktop.recorder",
      "icon": "assets/logo.png"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
